@model MeteologyEntity.Models.Settings
@{
    ViewBag.Title = "Настройки";
}

<h2>Настройки</h2>

<form class="form-horizontal">
    <div class="form-group">
        <label for="Forecast_Folder" class="col-sm-2 control-label">Каталог прогнозов:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Forecast_Folder" name="Forecast_Folder" value="@Model.Forecast_Folder" disabled>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID })
        </div>
    </div>
</form>
